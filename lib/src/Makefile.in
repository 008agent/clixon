dbdir		= @prefix@/db
mandir		= @mandir@
libexecdir	= @libexecdir@
localstatedir	= @localstatedir@
sysconfdir	= @sysconfdir@

SH_SUFFIX	= @SH_SUFFIX@
CLICON_VERSION  = @CLICON_VERSION@
